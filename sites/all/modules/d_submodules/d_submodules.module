<?php

namespace Drupal\d_submodules;

\spl_autoload_register(function ($class) {
  if (0 === strpos($class, __NAMESPACE__) &&
    file_exists($file = __DIR__ . '/src' . str_replace('\\', DIRECTORY_SEPARATOR, str_replace(__NAMESPACE__, '', $class)) . '.php')
  ) {
    include $file;
    return TRUE;
  }
  return FALSE;
}, TRUE, TRUE);

new Submodules('d_submodules');

